{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node"
  },
  "include": ["src", "tests"]
}
